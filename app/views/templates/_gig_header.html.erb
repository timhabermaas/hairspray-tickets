<div class="page-header">
  <h1>{{gig.title}} <small>{{gig.date | germanDate}}</small></h1>
</div>

<ul class="pager">
  <li class="previous" ng-class="{disabled: gig.prev_gig == null}">
    <a ng-show="gig.prev_gig" ng-href="#/auffuehrungen/{{gig.prev_gig.id}}/orders">
      &larr; Vorheriger Auftritt
    </a>
    <span ng-hide="gig.prev_gig">&larr; Vorheriger Auftritt</span>
  </li>
  <li class="next" ng-class="{disabled: gig.next_gig == null}">
    <a ng-show="gig.next_gig" ng-href="#/auffuehrungen/{{gig.next_gig.id}}/orders">
      Nächster Auftritt &rarr;
    </a>
    <span ng-hide="gig.next_gig">Nächster Auftritt &rarr;</span>
  </li>
</ul>
