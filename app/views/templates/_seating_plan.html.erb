<div class="row">
  <div class="span12">
    <div class="seating-plan-container">
      <svg class="seating-plan" width="1050" height="480">
        <g transform="translate(10, 1)">
          <g ng-repeat="(row, seats) in rows" transform="translate(0, {{row * 25}})">
            <g transform="translate(20, 0)">
              <g class="seat" ng-repeat="seat in seats" transform="translate({{seat.x * 18}}, 0)">
                <rect width="18" height="18" style="fill:rgba(0,0,0,0);stroke-width: 1; stroke: rgb(0, 0, 0)" ng-click="selectSeat(seat)"></rect>
                <text x="9" y="13" style="font-size: 11px" ng-click="selectSeat(seat)" text-anchor="middle" ng-show="seat.usable">{{seat.number}}</text>
              </g>
            </g>
            <text y="14" x="5" text-anchor="end">{{seats[0].row.number}}</text>
            <text y="14" x="1023" text-anchor="end">{{seats[0].row.number}}</text>
          </g>
          <g transform="translate(20, 0)">
            <g ng-repeat="order in orders">
              <rect ng-repeat="seat in order.seats" x="{{seat.x * 18}}" y="{{seat.row.y * 25}}" width="18" height="18" class="seat" style="fill:{{fillColor(order)}}; stroke:{{strokeColor(order)}}; stroke-width: 2" ng-click="clickReservedSeat(seat, order)"></rect>
            </g>
          </g>

          <line x1="182" y1="450" x2="885" y2="450" style="stroke:rgb(0,0,0);stroke-width:2"/>
          <text x="510" y="475" style="font-size: 16px">BÃœHNE</text>
        </g>
      </svg>
    </div>
  </div>
</div>
